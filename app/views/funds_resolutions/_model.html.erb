<%= form_with model: @funds_resolution, local: true do |form| %>

  <div class="form-group row">
    <%= form.label :number, 'NÃºmero:', class: 'col-sm col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :number, class: 'form-control-plaintext', readonly: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :date, 'Fecha de inicio:', class: 'col-2 col-form-label' %>
    <%= form.date_select(:date,
                         options = {
                             disabled: true,
                             order: [:day, :month, :year]
                         },
                         html_options = { class: 'form-control-plaintext col-auto',
                                          style: 'width: inherit;'
                         }
        ) %>
  </div>

  <div class="form-group row">
    <%= form.label :resolution_type, 'Tipo:', class: 'col-sm col-form-label' %>
    <div class="col-10">
      <%= form.collection_select :resolution_type_id,
                                 ResolutionType.enabled,
                                 :id,
                                 :name,
                                 {},
                                 class: 'form-control-plaintext',
                                 disabled: true,
                                 readonly: true %>
    </div>
  </div>

<% end %>
