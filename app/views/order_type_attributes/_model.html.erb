<%= form_with scope: :order_type_attribute, url: order_type_path, local: true do |form| %>

  <div class="form-group row">
    <%= form.label :attribute_name, 'Nombre:', class: 'col-sm col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :attribute_name, class: 'form-control-plaintext', readonly: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :attribute_type, 'Descripción:', class: 'col col-form-label' %>
    <div class="col-10">
      <%= form.text_area :attribute_type, class: 'form-control-plaintext', readonly: true %>
    </div>
  </div>
<% end %>

<div class="row">
  <% unless @order_type_attribute.is_disabled %>
    <div class="col text-right">
      <%= link_to 'Eliminar', order_type_path(@order_type_attribute),
                  class: 'btn btn-outline-danger',
                  method: :delete,
                  data: { confirm: '¿Seguro que desea eliminar?' } %>
      <%= link_to 'Editar', oder_type_attribute_path(@order_type_attribute), class: 'btn btn-outline-primary' %>
    </div>
  <% end %>
</div>