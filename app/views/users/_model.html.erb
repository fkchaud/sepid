<%= form_with model: @user, local: true do |form| %>

  <div class="form-group row">
    <%= form.label :user_name, 'Nombre de Usuario:', class: 'col col-form-label' %>
    <div class="col-10">
      <%= form.text_field :user_name, class: 'form-control-plaintext', readonly: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :file_number, 'Legajo:', class: 'col col-form-label' %>
    <div class="col-10">
      <%= form.text_field :file_number, class: 'form-control-plaintext', readonly: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :last_name, 'Apellido:', class: 'col col-form-label' %>
    <div class="col-10">
      <%= form.text_field :last_name, class: 'form-control-plaintext', readonly: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :first_name, 'Nombre:', class: 'col col-form-label' %>
    <div class="col-10">
      <%= form.text_field :first_name, class: 'form-control-plaintext', readonly: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :email, 'Email:', class: 'col col-form-label' %>
    <div class="col-10">
      <%= form.text_field :email, class: 'form-control-plaintext', readonly: true, type: 'email' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :cuil, 'CUIL:', class: 'col col-form-label' %>
    <div class="col-10">
      <%= form.text_field :cuil, class: 'form-control-plaintext', readonly: true %>
    </div>
  </div>


  <% if can_action?('Administrar usuarios', 'Asignar perfil')%>
  <div class="form-group row">
    <label class="col col-form-label">Perfil de Usuario:</label>
    <div class="col-10">
      <%= form.collection_select :user_profile_id, # checks a marcar
                                 controller.user_profiles, # de donde salen
                                 :id, # valor
                                 :name, # label
                                 {},
                                 class: 'form-control',
                                 disabled: true,
                                 readonly: true  %>
    </div>
  </div>
<%end%>
  <%if can_action?('Administrar usuarios', 'Asignar cargo universitario') %>
  <div class="form-group row">
    <label class="col col-form-label">Cargo Universitario:</label>
    <div class="col-10"> <!--     checks a marcar,        de donde salen,        valor, label       -->
      <%= form.collection_select :university_position_id, UniversityPosition.enabled, :id, :name, {}, class: 'form-control', disabled: true, readonly: true %>
    </div>
  </div>
  <% end %>

<% end %>