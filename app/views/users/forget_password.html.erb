<h1>Olvidé mi contraseña</h1>
<% flash.each do |key, value| %>
  <div class="<%= flash_class(key) %>">
    <%= value %>
  </div>
<% end %>
<%= form_with scope: :user, url: users_password_reset_path, method: "post", local: true do |form| %>

  <div class="form-group row">
    <%= form.label :user_name, 'Nombre de usuario:', class: 'col col-form-label' %>
    <div class="col-10">
      <%= form.text_field :user_name, class: 'form-control' %>
    </div>
  </div>
  <p class="text-right">
    <%= link_to "Cancelar", welcome_index_path, class: 'btn btn-outline-secondary' %>
    <%= form.submit 'Solicitar cambio de contraseña', class: 'btn btn-success' %>
  </p>
<% end %>