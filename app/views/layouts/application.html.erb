            <li>
              <%= link_to 'CU 06: ABM Cargo Universitario', university_positions_path %>
              <span class="badge badge-success">Done</span>
            </li>
            <li>
              <%= link_to 'CU 07: ABM Proyecto', projects_path %>
              <span class="badge badge-info">Prettify</span>
            </li>
            <li>
              <%= link_to 'CU 08: ABM Estado de Proyecto', project_statuses_path %>
              <span class="badge badge-success">Done</span>
            </li>
            <li>
              <%= link_to 'CU 09: ABM Tipo de Proyecto', project_types_path %>
              <span class="badge badge-success">Done</span>
