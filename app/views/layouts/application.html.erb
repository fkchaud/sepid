            <li>
              <%= link_to 'CU 29: ABM Estado del Pedido', order_statuses_path %>
              <span class="badge badge-success">Done</span>
            </li>
            <li>
              <%= link_to 'CU 30: ABM Estado de Valor', value_statuses_path %>
              <span class="badge badge-success">Done</span>
            </li>
          </ul>
        </nav>
      </td>
      <td>
        <div class="container">
          <%= yield %>
        </div>
      </td>
    </tr>
  </table>

  </body>
</html>
