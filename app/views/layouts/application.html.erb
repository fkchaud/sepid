<!DOCTYPE html>
<html>
  <head>
    <title>SePID</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="page-header" style="background-color:#CDD3CE;">
    <div class="dropdown" align = "right">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Acceso
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <% if current_user %>
          <%= link_to "Cerrar sesión", logout_path(current_user), method: :delete , class:"dropdown-item"%>
        <% end %>
        <% if !current_user %>
          <%= link_to "Iniciar sesión", login_path, class:"dropdown-item" %>
        <% end %>
        <% if current_user %>
          <%= link_to 'Modificar perfil', edit_user_path(current_user), class:"dropdown-item" %>
        <% end %>
      </div>
    </div>
  </div>
  <table width="100%">
    <tr>
      <td width="25%" style="background-color:#E5F0E7;" valign="top">
        <nav id="sidebar">
          <div class="sidebar-header">
            <h3>Menú de navegación</h3>
          </div>

          <ul class="list-unstyled components">
            <li>
              <%= link_to 'CU 02: Administrar Usuarios', users_path %>
              <span class="badge badge-success">Done</span>
            </li>
            <li>
              <%= link_to 'CU 05: ABM Perfil de Usuario', user_profiles_path %>
              <span class="badge badge-success">Done</span>
            </li>
            <li>
              <%= link_to 'CU 06: ABM Cargo Universitario', university_positions_path %>
              <span class="badge badge-success">Done</span>
            </li>
            <li>
              <%= link_to 'CU 07: ABM Proyecto', projects_path %>
              <span class="badge badge-info">Prettify</span>
            </li>
            <li>
              <%= link_to 'CU 08: ABM Estado de Proyecto', project_statuses_path %>
              <span class="badge badge-success">Done</span>
            </li>
            <li>
              <%= link_to 'CU 09: ABM Tipo de Proyecto', project_types_path %>
              <span class="badge badge-success">Done</span>
            </li>
            <li>
              <%= link_to 'CU 10: Administrar Resoluciones', funds_resolutions_path %>
              <span class="badge badge-warning">WIP</span>
            </li>
            <li>
              <%= link_to 'CU 11: ABM Tipo de Resolución', resolution_types_path %>
              <span class="badge badge-success">Done</span>
            </li>
            <li>
              <%= link_to 'CU 13: Parametrizar Tipo de Pedido', order_types_path %>
              <span class="badge badge-warning">WIP</span>
            </li>
            <li>
              <%= link_to 'CU 18: ABM Inciso', subsections_path %>
              <span class="badge badge-success">Done</span>
            </li>
            <li>
              <%= link_to 'CU 19: ABM Estado de Cambio de Inciso', subsection_shift_statuses_path %>
              <span class="badge badge-success">Done</span>
            </li>
            <li>
              <%= link_to 'CU 29: ABM Estado del Pedido', order_statuses_path %>
              <span class="badge badge-success">Done</span>
            </li>
            <li>
              <%= link_to 'CU 30: ABM Estado de Valor', value_statuses_path %>
              <span class="badge badge-success">Done</span>
            </li>
          </ul>
        </nav>
      </td>
      <td>
        <div class="container">
          <%= yield %>
        </div>
      </td>
    </tr>
  </table>

  </body>
</html>
