<%= form_with model: @user_profile, local: true do |form| %>

  <div class="form-group row">
    <%= form.label :name, 'Nombre:', class: 'col col-form-label' %>
    <div class="col-10">
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :description, 'DescripciÃ³n:', class: 'col col-form-label' %>
    <div class="col-10">
      <%= form.text_area :description, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col">Permisos:</label>
    <div class="col-10"> <!--       checks a marcar  , de donde salen  , valor, label       -->
      <%= form.collection_check_boxes :access_permit_ids, AccessPermit.all, :id, :use_case_name do |cb| %>
        <div class="form-check">
          <%= cb.check_box %>
          <%= cb.label %>
        </div>
      <% end %>
    </div>
  </div>

  <p class="text-right">
    <%= link_to "Cancelar", :back, class: 'btn btn-outline-secondary' %>
    <%= form.submit 'Guardar', class: 'btn btn-success' %>
  </p>
<% end %>