<h1>ABM Tipo de Resolución</h1>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Nombre</th>
      <th>Descripción</th>
      <th class="fit"></th>
    </tr>
  </thead>
  <tbody>
    <% @resolution_types.each do |resolution_type| %>
      <tr class="align-items-center<%= ' table-disabled' if resolution_type.is_disabled %>">
        <td><%= resolution_type.name %></td>
        <td><%= resolution_type.description %></td>
        <td class="fit">
          <div class='btn-group'>
            <%= link_to 'Mostrar', resolution_type_path(resolution_type), class: 'btn btn-outline-info' %>
            <% unless resolution_type.is_disabled %>
              <%= link_to 'Editar', edit_resolution_type_path(resolution_type), class: 'btn btn-outline-primary' %>
              <%= link_to 'Eliminar', resolution_type_path(resolution_type),
                          class: 'btn btn-outline-danger',
                          method: :delete,
                          data: { confirm: '¿Seguro que desea eliminar?' } %>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Agregar Estado de Proyecto', new_resolution_type_path, class: 'btn btn-outline-primary btn-block' %>