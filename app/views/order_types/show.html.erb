<h1>Tipos de pedidos</h1>

<% flash.each do |key, value| %>
  <div class="<%= flash_class(key) %>">
    <%= value %>
  </div>
<% end %>

<%= render 'model' %>

<div class="row">
  <div class="col text-left">
    <%= link_to 'Volver al índice', order_types_path, class: 'btn btn-outline-secondary' %>
  </div>
  <% unless @order_type.is_disabled %>
    <div class="col text-right">
      <%= link_to 'Eliminar', order_type_path(@order_type),
                  class: 'btn btn-outline-danger',
                  method: :delete,
                  data: { confirm: '¿Seguro que desea eliminar?' } %>
      <%= link_to 'Editar', edit_order_type_path(@order_type), class: 'btn btn-outline-primary' %>
    </div>
  <% end %>
</div>