    <%= form.label :name_type_order, 'Nombre:', class: 'col-sm col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :name_type_order, class: 'form-control-plaintext', readonly: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :description_type_order, 'DescripciÃ³n:', class: 'col col-form-label' %>
    <div class="col-10">
