<%= form_with model: @order_status, local: true do |form| %>

  <div class="form-group row">
    <%= form.label :order_status_name, 'Nombre:', class: 'col col-form-label' %>
    <div class="col-10">
      <%= form.text_field :order_status_name, class: 'form-control-plaintext', readonly: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :order_status_description, 'Descripción:', class: 'col col-form-label' %>
    <div class="col-10">
      <%= form.text_area :order_status_description, class: 'form-control-plaintext', readonly: true %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col"></div>
    <div class="form-check col-10">
      <%= form.check_box :allow_cancel_order, class: 'form-check-input', disabled: true %>
      <%= form.label :allow_cancel_order, '¿Permitir que se cancele el pedido en este estado?',
                     class: 'form-check-label', disabled: true %>
    </div>
  </div>

<% end %>