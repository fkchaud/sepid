<%= form_with model: @project_type, local: true do |form| %>

  <div class="form-group row">
    <%= form.label :name, 'Nombre:', class: 'col col-form-label' %>
    <div class="col-10">
      <%= form.text_field :name, class: 'form-control-plaintext', readonly: true %>
    </div>
  </div>
  
  <div class="form-group row">
    <%= form.label :purpose, 'Finalidad:', class: 'col col-form-label' %>
    <div class="col-10">
      <%= form.select(:purpose, ProjectTypesController::PURPOUSE, {}, class: 'form-control-plaintext', readonly: true, disabled: true) %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :function, 'Función:', class: 'col col-form-label' %>
    <div class="col-10">
      <%= form.select(:function, ProjectTypesController::FUNCTION, {}, class: 'form-control-plaintext', readonly: true, disabled: true) %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :program, 'Programa:', class: 'col col-form-label' %>
    <div class="col-10">
      <%= form.select(:program, ProjectTypesController::PROGRAM, {}, class: 'form-control-plaintext', readonly: true, disabled: true) %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :activity, 'Actividad:', class: 'col col-form-label' %>
    <div class="col-10">
      <%= form.select(:activity, ProjectTypesController::ACTIVITY, {}, class: 'form-control-plaintext', readonly: true, disabled: true) %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :financing, 'Financiación:', class: 'col col-form-label' %>
    <div class="col-10">
      <%= form.select(:financing, ProjectTypesController::FINANCING, {}, class: 'form-control-plaintext', readonly: true, disabled: true) %>
    </div>
  </div>

<% end %>