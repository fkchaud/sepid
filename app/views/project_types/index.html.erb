<h1>Administrar Tipos de Proyecto</h1>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Nombre</th>
      <th class="fit"></th>
    </tr>
  </thead>
  <tbody>
    <% @project_types.each do |project_type| %>
      <tr class="align-items-center<%= ' table-disabled' if project_type.is_disabled %>">
        <td><%= project_type.name %></td>
        <td class="fit">
          <div class='btn-group'>
            <%= link_to 'Mostrar', project_type_path(project_type), class: 'btn btn-outline-info' %>
            <% unless project_type.is_disabled %>
              <%if can_action?( 'Administrar Tipo de Proyecto', 'Editar tipo de proyecto') %>
                <%= link_to 'Editar', edit_project_type_path(project_type), class: 'btn btn-outline-primary' %>
              <%end%>
              <%if can_action?( 'Administrar Tipo de Proyecto', 'Eliminar tipo de proyecto') %>
                <%= link_to 'Eliminar', project_type_path(project_type),
                            class: 'btn btn-outline-danger',
                            method: :delete,
                            data: { confirm: 'Â¿Seguro que desea eliminar?' } %>
              <%end%>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%if can_action?( 'Administrar Tipo de Proyecto', 'Agregar tipo de proyecto') %>
  <%= link_to 'Agregar Tipo de Proyecto', new_project_type_path, class: 'btn btn-outline-primary btn-block' %>
<%end%>