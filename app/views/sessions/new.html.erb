<h1>Iniciar sesión</h1>

<% flash.each do |key, value| %>
  <div class="<%= flash_class(key) %>">
    <%= value %>
  </div>
<% end %>

<div class="col-6">
<%= form_for(:session, url: login_path) do |f| %>
  <div class="form-group row">
    <%= f.label :name, class: "col col-form-label" %>
    <div class="col-8"><%= f.text_field :name, class: 'form-control' %></div>
  </div>
  <div class="form-group row">
    <%= f.label :password, class: "col col-form-label" %>
    <div class="col-8"><%= f.password_field :password, class: 'form-control' %></div>
  </div>
  <div class="form-group row">
    <div class="col-12"><%= f.submit "Log in", class: "btn btn-primary btn-block" %></div>
  </div>
<% end %>
</div>
<%= link_to "Olvide mi contraseña", forget_password_path, class: 'btn btn-secondary' %>
